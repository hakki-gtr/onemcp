{
  "name": "@gentoro/onemcp-cli",
  "version": "0.1.0",
  "description": "CLI for Gentoro OneMCP - Connect APIs to AI models via Model Context Protocol",
  "type": "module",
  "bin": {
    "onemcp": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json && npm run copy-example-handbook && chmod +x dist/index.js",
    "copy-example-handbook": "node ./scripts/copy-example-handbook.mjs",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts",
    "package": "npm run build && npm pack"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "llm",
    "openai",
    "gemini",
    "anthropic",
    "cli"
  ],
  "author": "Gentoro",
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "axios": "^1.7.2",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "execa": "^8.0.1",
    "find-up": "^7.0.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.23",
    "log-symbols": "^6.0.0",
    "node-pty": "^1.0.0",
    "ora": "^8.0.1",
    "strip-ansi": "^7.1.0",
    "tree-kill": "^1.2.2",
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typescript": "^5.6.2"
  }
}
